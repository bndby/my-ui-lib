{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "my-ui-lib/registry.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version", "items"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "items": {
      "type": "object",
      "additionalProperties": false,
      "required": ["test-configs", "components", "hooks", "utils"],
      "properties": {
        "test-configs": {
          "type": "array",
          "items": { "$ref": "#/$defs/registryItem" }
        },
        "components": {
          "type": "array",
          "items": { "$ref": "#/$defs/registryItem" }
        },
        "hooks": {
          "type": "array",
          "items": { "$ref": "#/$defs/registryItem" }
        },
        "utils": {
          "type": "array",
          "items": { "$ref": "#/$defs/registryItem" }
        }
      }
    }
  },
  "$defs": {
    "registryItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "description", "category", "files", "dependencies", "meta"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "enum": ["test", "ui", "hooks", "lib"]
        },
        "files": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "required": ["since"],
          "properties": {
            "since": {
              "type": "string",
              "minLength": 1
            },
            "deprecated": {
              "type": "string",
              "minLength": 1
            },
            "breaking": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
